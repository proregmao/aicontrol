# 智能设备管理系统环境变量配置示例

# 应用配置
APP_NAME=智能设备管理系统
APP_VERSION=1.0.0
APP_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0

# 数据库配置 (使用SQLite进行开发测试)
DB_TYPE=sqlite
DB_PATH=./data/smart_device_management.db
# PostgreSQL配置 (生产环境使用)
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=your_password_here
# DB_NAME=smart_device_management
# DB_SSLMODE=disable
# DB_TIMEZONE=Asia/Shanghai

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=168h

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# WebSocket配置
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024
WS_HEARTBEAT_INTERVAL=30s

# Modbus配置
MODBUS_TIMEOUT=30s
MODBUS_RETRY_COUNT=3
MODBUS_RETRY_INTERVAL=5s

# SSH配置
SSH_TIMEOUT=30s
SSH_RETRY_COUNT=3
SSH_KEY_PATH=/etc/ssh/keys

# 钉钉通知配置
DINGTALK_WEBHOOK_URL=
DINGTALK_SECRET=

# 邮件配置
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=

# 安全配置
BCRYPT_COST=12
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30s
